<div class="card">
  <div class="card-header">
    Categories
  </div>
  <div class ="card-body">
    <ul class="list-group">
      <% @categories.each do |ca| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <h6><%= link_to ca.name, products_path(cate: ca.id), class:"text-reset"%></h6>
          <span class="badge badge-primary badge-success" ><%= ca.products.count %></span>
        </li>
      <% end %>
    </ul>
  </div>
</div>
