<article>
  <% if notice %>
    <aside id="notice"><%= notice %></aside>
  <% end %>
  <h2>Your Cart</h2>
  <table>

      <%= render shopping_cart.line_items %>

    <tfoot>
      <tr>
        <th colspan="2">Total:</th>
        <td class="price"> <%= number_to_currency(shopping_cart.total_price) %></td>
      </tr>
    </tfoot>
  </table>
  <%= button_to 'Empty cart', shopping_cart, method: :delete, data: {confirm: 'Are you sure?'} %>
</article>
