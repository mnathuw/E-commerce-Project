<div class="text-center">
  <h4>Add New Addresses</h4>
  <% if current_devise_user %>
    <%= form_for @address, url: addresses_path, method: :post do |f| %>
      <ul style="list-style-type: none;">

        <li>
          <%= f.label :country %>
          <%= f.text_field :country %>
        </li>
        <li>
          <%= f.label :full_name %>
          <%= f.text_field :full_name %>
        </li>
        <li>
          <%= f.label :street_number %>
          <%= f.text_field :street_number %>
        </li>
        <li>
          <%= f.label :apartment_number %>
          <%= f.text_field :apartment_number %>
        </li>
        <li>
          <%= f.label :city %>
          <%= f.text_field :city %>
        </li>
        <li>
          <%= f.label :province_id %>
          <% provinces_array = Province.all { |p| [p.id, p.name] } %>
          <%= select_tag(:province_id, options_from_collection_for_select(provinces_array, "id", "name"), include_blank: "All", style: "height: 30px; width: 150px; text-transform: capitalize;", class: " border_color") %>

        </li>
        <li>
          <%= f.label :postcode %>
          <%= f.text_field :postcode %>
        </li>
        <li>
          <%= f.label :phone_number %>
          <%= f.text_field :phone_number %>
        </li>
      </ul>
      <%= f.submit "Add Address", class: "btn text-success" %>
    <% end %>
  <% end %>
</div>
